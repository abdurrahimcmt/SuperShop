@model IEnumerable<SuperShop.Models.ApplicationType>

<div class="container p-4">
    <div class="row p-4">
        <div class="col-6">
            <h2>Application Type List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Create" class="btn btn-primary">Create New Application List</a>
        </div>
        <br /><br />
        @if (Model.Count()>0) 
        {
        <table class="table table-bordered table-striped w-100">
                <thead>
                    <tr>
                        <th>
                            Name
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var obj in Model) { 
                        <tr>
                            <td width="80%">@obj.Name</td>
                            <td class="text-center">
                                <div class="w-75 btn-group" role="group" >
                                    <a asp-controller="ApplicationType" asp-route-Id="@obj.Id"
                                       asp-action="Edit" class="btn btn-success">
                                       <i class="fas fa-edit"></i></a>
                                    <a asp-controller="ApplicationType" asp-route-Id="@obj.Id" 
                                       asp-action="Delete" class="btn btn-danger">
                                        <i class="fas fa-trash-alt"></i></a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No Application Type Exist</p>
        }
    </div>
</div>


